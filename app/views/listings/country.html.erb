<%= render 'partial/navbar' %>
<div class="container">
    <div class="col-md-3">
        <!-- vertical-navbar -->
        <%= render 'partial/verticalnavbar'%>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-center">
                    <span style="font-size:24px;">おすすめワインの編集</span>
                </div>
            </div>

            <div class="panel-body">

                <%= form_for @listing do |f| %>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>国名</label>
                                <%= f.text_field :country, {placeholder: "例：イタリア　空欄可",required: 'true', class: "form-control"} %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>ブドウ品種</label>
                                <%= f.text_field :hinsyu, {placeholder: "例：サンジョベーゼ（カタカナで記述）　空欄可",required: 'true', class: "form-control"} %>
                            </div>
                        </div>
                    </div>
          <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>生産者</label>
                                <%= f.text_field :sanchi, {placeholder: "空欄可", class: "form-control"} %>
                            </div>
                        </div>
                    </div>

                    <div class="actions">
                        <%= f.submit "更新", class: "btn btn-danger" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
